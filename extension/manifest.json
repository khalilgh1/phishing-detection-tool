{
    "manifest_version": 3,
    "name": "Osprey",
    "version": "1.0.0",
    "description": "Osprey â€” AI-powered email phishing detection. Automatically scans Gmail emails using a DistilBERT model.",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "http://localhost:5000/*"
    ],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/osprey.png",
            "48": "icons/osprey.png",
            "128": "icons/osprey.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "content/modules/utils.js",
                "content/modules/gmail.js",
                "content/modules/overlay-ui.js",
                "content/content.js"
            ],
            "css": [
                "content/overlay.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/osprey.png",
        "48": "icons/osprey.png",
        "128": "icons/osprey.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/osprey.png"
            ],
            "matches": [
                "https://mail.google.com/*"
            ]
        }
    ]
}